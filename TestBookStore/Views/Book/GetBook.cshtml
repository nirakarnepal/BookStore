@using TestBookStore.Models;
@model BookModel
@{
    Layout = "_Layout";
}

<div class="container">
    <h1>Book Details</h1>
    <div class="row">
        <div class="col-md-6">
            <h3> Book Name: <b>@Model.Title</b></h3>
            <h4> Book ID: <b>@Model.Id</b></h4>
            <p> Author Name:<b>@Model.Author</b></p>
        </div>
    </div>
</div>